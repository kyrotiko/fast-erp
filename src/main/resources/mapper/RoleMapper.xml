<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yy.fasterp.mapper.RoleMapper">
	<resultMap id="BaseResultMap" type="com.yy.fasterp.pojo.Role">
		<id column="id" jdbcType="INTEGER" property="id" />
		<result column="role" jdbcType="VARCHAR" property="role" />
		<result column="remark" jdbcType="VARCHAR" property="remark" />
		<result column="status" jdbcType="TINYINT" property="status" />
		<collection column="id" property="permissions" javaType="list"
					select="selectAllPermission"/>
	</resultMap>
	<sql id="Base_Column_List">
		id, role, remark, status
	</sql>

	<select id="selectAllPermission" parameterType="INTEGER"
		resultType="com.yy.fasterp.pojo.Permission">
		select id,content,remark
		from permission where id in (select
		role_permission.permissionid
		from role_permission where
		role_permission.roleid=#{id})
	</select>




	<select id="selectByPrimaryKey" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from role
		where id = #{id,jdbcType=INTEGER}
	</select>
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from role
		where id = #{id,jdbcType=INTEGER}
	</delete>
	<insert id="insert" parameterType="com.yy.fasterp.pojo.Role">
		insert into role (id, role,
		remark,
		status)
		values (#{id,jdbcType=INTEGER},
		#{role,jdbcType=VARCHAR},
		#{remark,jdbcType=VARCHAR},
		#{status,jdbcType=TINYINT})
	</insert>
	<insert id="insertSelective" parameterType="com.yy.fasterp.pojo.Role">
		insert into role
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="role != null">
				role,
			</if>
			<if test="remark != null">
				remark,
			</if>
			<if test="status != null">
				status,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="role != null">
				#{role,jdbcType=VARCHAR},
			</if>
			<if test="remark != null">
				#{remark,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				#{status,jdbcType=TINYINT},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="com.yy.fasterp.pojo.Role">
		update role
		<set>
			<if test="role != null">
				role = #{role,jdbcType=VARCHAR},
			</if>
			<if test="remark != null">
				remark = #{remark,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				status = #{status,jdbcType=TINYINT},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
	<update id="updateByPrimaryKey" parameterType="com.yy.fasterp.pojo.Role">
		update role
		set
		role = #{role,jdbcType=VARCHAR},
		remark = #{remark,jdbcType=VARCHAR},
		status = #{status,jdbcType=TINYINT}
		where id = #{id,jdbcType=INTEGER}
	</update>
	<select id="selectAll" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from role
	</select>



	<select id="getRoleListByLimit" resultMap="BaseResultMap">
		select
		r.id,r.role,r.remark,r.status
		from
		role as r
		<if test='role != null'>
			where role like '%${role}%'
		</if>
	</select>

	<delete id="deleteRoleList" parameterType="java.util.List">
		delete from role
		where role.id in
		<foreach item="param" collection="list" open="(" close=")"
			separator=",">
			#{param.id}
		</foreach>
	</delete>
	<delete id="deleteRolePermissions" parameterType="java.util.List">
		delete from role_permission
		where role_permission.roleid in
		<foreach item="param" collection="list" open="(" close=")"
			separator=",">
			#{param}
		</foreach>
	</delete>

	<insert id="saveRolePermission">
		insert into role_permission(roleid,
		permissionid)
		values
		<foreach item="permission" collection="permissions" separator=",">
			(#{role.id},#{permission.id})
		</foreach>
	</insert>
	<select id="selectByRoleName" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from role where role.role = #{role}
	</select>



</mapper>